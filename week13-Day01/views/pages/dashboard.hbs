{{> header}}
<div class="container">
    <div class="d-flex justify-content-between mt-3 mb-3">
        <h3>Hello {{user.name}}</h3>
        <div class="mr-5">
            <a href="/blog/create">Create a blog</a>
        </div> 
    </div>
    {{#if user.blogs}}
    <h5>Your Blogs</h5>
    <div class="row">
        {{#each user.blogs}}
        <div class="col-8">
            <div class="form-group">
                <label for="exampleFormControlInput1">Blog Title</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="{{this.title}}" disabled>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Blog Content</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                    disabled>{{this.content}}</textarea>
            </div>
        </div>
        <div class="col-4">
            <div>
                <div class="mt-5">
                    <form action="/blog/update/{{this._id}}?_method=GET" method="POST">
                        <button type="submit" class="btn btn-dark">Edit</button>
                    </form>
                </div>
                <div class="mt-4">
                    <form action="/blog/delete/{{this._id}}?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-dark">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>